<!DOCTYPE html>
<html>
<head>
    <title>Manage Categories</title>
    <link rel="stylesheet" href="/admin.css">
</head>
<body>
    <div class="container">
        <h1>Manage Categories</h1>
        <div style="text-align: center;">
            <a href="/categories/create">Create New Category</a>
        </div>

        <div class="categories-grid">
            <% categories.forEach(category => { %>
                <div class="category-card">
                    <img src="<%= category.imageUrl || '/images/default-category.png' %>" alt="<%= category.name %>">
                    <h2><%= category.name %></h2>
                    <p><%= category.description %></p>
                    <p>Order: <%= category.order %></p>
                    <div class="category-actions">
                        <a href="/categories/<%= category._id %>/edit">Edit</a>
                        <form action="/categories/<%= category._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>

        <div style="text-align: center;">
            <a href="/admin">Back to Admin Panel</a>
        </div>
    </div>
</body>
</html>