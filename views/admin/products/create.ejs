<!DOCTYPE html>
<html>
<head>
    <title><%= creatingCategory ? 'Create Category' : 'Create Product' %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1><%= creatingCategory ? 'Create New Category' : 'Create New Product' %></h1>

        <% if (typeof error !== 'undefined' && error) { %>
            <p style="color: red;"><%= error %></p>
        <% } %>

        <% if (creatingCategory) { %>
            <!-- Форма для создания категории -->
            <form action="/categories" method="POST">
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div>
                    <label for="description">Description:</label>
                    <textarea id="description" name="description"></textarea>
                </div>
                <button type="submit">Create Category</button>
            </form>
        <% } else { %>
            <!-- Форма для создания продукта -->
            <form action="/products" method="POST">
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <!-- ... остальная часть формы для создания продукта ... -->
            </form>
        <% } %>

        <a href="/admin">Back to Admin Panel</a>
    </div>
</body>
</html>